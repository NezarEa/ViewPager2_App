<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdFragment">

    <ImageView
        android:id="@+id/app_info_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/countries"
        android:layout_marginTop="32dp"
        android:contentDescription="App Information Image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/app_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About VP2"
        android:textSize="24sp"
        android:textColor="@color/primaryText"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/app_info_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/app_info_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VP2 App helps you to know name of flag the countries and explore various countries information. learn more about countries around the world."
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/secondaryText"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/app_info_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/app_info_features"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Key Features:\n • Explore country information\n • Easy to use, with a clean interface\n • Lightweight and fast"
        android:textSize="16sp"
        android:textColor="@color/primaryText"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/app_info_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>